@{
  Layout = "_Layout";
}
@model HairSalon.Models.Stylist


<h1>Add a Stylist</h1>
<p>Add a Stylist here:</p>
@using (Html.BeginForm())
{
  <div class="form-row">
    <div class="form-group col-md-12">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name)
      </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-12">
        @Html.LabelFor(model => model.Specialty)
        @Html.TextBoxFor(model => model.Specialty)
      </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-12">
        @Html.LabelFor(model => model.Description)
        @Html.TextBoxFor(model => model.Description)
      </div>
  </div>
  <input type="submit" value="Add new stylist" class="btn-secondary"/>
}

<p class="m-4">@Html.ActionLink("Back to stylists", "Index")</p>