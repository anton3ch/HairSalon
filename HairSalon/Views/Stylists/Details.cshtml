@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details</h2>
<hr />
<h4>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h4>
<p>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</p>
<p>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</p>

@if (@Model.Clients.Count == 0)
{
  <h3>No clients have been added to this stylist yet!</h3>
} 
else
{
  <h3 class="border-top border-secondary pt-4">Client List:</h3>
  <ul class="mb-5 list-group list-group-flush">
    @foreach (Client client in Model.Clients)
    {
      <li class="list-group-item list-group-item-action">@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId }) | @Html.ActionLink("Back to list", "Index")</p>