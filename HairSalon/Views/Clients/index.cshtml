@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 
else
{
  <ul class="mb-5 list-group">
    <li class="listTitle">Client name | Stylist name</li>
    @foreach (Client client in Model)
    {
      <li class="list-group-item list-group-item-action"> @Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @Html.ActionLink($"{client.Stylist.Name}", "Details", "Stylists", new { id = client.Stylist.StylistId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new client", "Create")</p>